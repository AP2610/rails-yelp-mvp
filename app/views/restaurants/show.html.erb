<div class="container">
  <h1><%= @restaurant.name %></h1>

  <h3>Details</h3>
  <p><strong>Name:</strong> <%= @restaurant.name %> </p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
  <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
  <strong>Review:</strong>
  <ol>
    <% @reviews.each do |review| %>
    <li>Rating: <%= review.rating %> | <%= review.content %></li>
    <% end %>
  </ol>

  <p><%= link_to "Back to restaurant list", restaurants_path %></p>
  <p><%= link_to "Add a review", new_restaurant_review_path(params[:id]) %></p>

</div>

